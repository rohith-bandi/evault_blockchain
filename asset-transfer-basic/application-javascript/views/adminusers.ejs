        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
            white-space: nowrap; /* Prevent text from wrapping */
            overflow: hidden; /* Hide content that overflows */
            text-overflow: ellipsis; /* Display an ellipsis (...) when content overflows */
