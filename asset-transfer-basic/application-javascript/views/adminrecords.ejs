        table {
            border-collapse: collapse;
            width: 100%;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
            max-width: 200px;
            cursor: pointer;
        }

        th {
            background-color: #f2f2f2;
            top: 0;
        }

        thead th {
            top: 0;
            z-index: 100;
            background-color: #f2f2f2;
        }

        tbody {
            display: block;
            overflow-y: auto;
            max-height: 400px;
        }

        tbody td, tbody th {
